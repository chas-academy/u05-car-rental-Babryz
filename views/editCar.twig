{% block editCar %}
<table border="1">
    <th colspan="1">Edit Car</th>
    <form action="/carEdited" method="POST">
        <tr>
            <td>
                <label for="regNr">Registration Nr:</label>
                <input type="text" name="regNr" placeholder="regNr..." required readonly value="{{regNr}}">
            </td>
        </tr>
        <tr>
            <td>
                <label for="make">Make:</label>
                <select name="make" required>
                    <option>{{make}}</option>
                {% for make in makes %}
                    <option>{{make.getMake}}</option>
                {% endfor %}
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label for="color">Color:</label>
                <select name="color" required>
                    <option>{{color}}</option>
                {% for color in colors %}
                    <option>{{color.getColor}}</option>
                {% endfor %}
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label  for="year">Year:</label >
                <input type="text" name="year" required placeholder="year..." value="{{year}}">
            </td>
        </tr>
        <tr>
            <td>
                <label  for="price">Price:</label >
                <input type="text" name="price" required placeholder="price..." value="{{price}}">
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Submit">
            </td>
        </tr>
    </form>
</table>
<form action="/cars" method="POST">
    <input type="submit" value="Cars">
</form>
{% endblock %}