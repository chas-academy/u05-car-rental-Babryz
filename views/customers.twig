{% block customers %}
<table border="1px solid red" style="width: 80%;">
    <th colspan="7"><h1>Customers</h1></th>
    <tr>
        <td><b>Personal Number</b></td>
        <td><b>Name</b></td>
        <td><b>Adress</b></td>
        <td><b>Postal Adress</b></td>
        <td><b>Phonenumber</b></td>
        <td colspan="2"></td>
    </tr>
    {% for customer in customers %}
    <tr>
        <td>{{customer.ssNr}}</td>
        <td>{{customer.name}}</td>
        <td>{{customer.adress}}</td>
        <td>{{customer.postalAdress}}</td>
        <td>{{customer.phonenumber}}</td>
        {% if customer.numberOfCars == 0 %}
         <td>
             <form action="/editCustomer/{{customer.ssNr}}/{{customer.name}}/{{customer.adress}}/{{customer.postalAdress}}/{{customer.phonenumber}}" method="POST">
                 <input type="submit" value="Edit" style="width: 100%;">
             </form>
         </td>
         <td>
             <form action="/removeCustomer/{{customer.ssNr}}/{{customer.name}}" method="POST" onsubmit="return confirm('Are you sure you want to remove customer {{customer.name}}?')">
                 <input type="submit" value="Remove" style="width: 100%;">
             </form>
         </td>
         {% else %}
          <td>
             <form action="/editCustomer/{{customer.ssNr}}/{{customer.name}}/{{customer.adress}}/{{customer.postalAdress}}/{{customer.phonenumber}}" method="POST">
                 <input type="submit" value="Edit" style="width: 100%; color: white;" disabled>
             </form>
         </td>
         <td>
             <form action="/removeCustomer/{{customer.ssNr}}/{{customer.name}}" method="POST" onsubmit="return confirm('Are you sure you want to remove customer {{customer.name}}?')">
                 <input type="submit" value="Remove" style="width: 100%; color: white;" disabled>
             </form>
         </td>
         {% endif %}
    </tr>
    {% endfor %}
    <tr>
        <td colspan="7">
            <form action="/addCustomer" method="POST">
                <input type="submit" value="Add Customer" style="width: 100%;">
            </form>
        </td>
    </tr>
    <tr>
        <td colspan="7">
            <form action="/" method="POST">
                <input type="submit" value="Main Menu" style="width: 100%;">
            </form>
        </td>
    </tr>
</table>
{% endblock %}