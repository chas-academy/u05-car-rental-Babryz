{% block cars %}
    <table border="1px solid red">
    <th colspan="9"><h1>Cars</h1></th>
    <tr>
        <td><b>Reg Number</b></td>
        <td><b>Make</b></td>
        <td><b>Color</b></td>
        <td><b>Year</b></td>
        <td><b>Price</b></td>
        <td><b>Checked out by</b></td>
        <td><b>Check out time</b></td>
        <td colspan="2"></td>
    </tr>
    {% for car in cars %}
    <tr>
        <td>{{car.regNr}}</td>
        <td>{{car.make}}</td>
        <td>{{car.color}}</td>
        <td>{{car.year}}</td>
        <td>{{car.price}}$/day</td>
        {% if car.ssNr == 0 %}
            <td colspan="2">Free</td>
        {% else %}
            <td>{{car.ssNr}}</td>
            <td>{{car.checkOutTime}}</td>
        {% endif %}
        {% if car.ssNr == 0 %}
            <td>
                <form action="/editCar/{{car.regNr}}/{{car.make}}/{{car.color}}/{{car.year}}/{{car.price}}" method="POST">
                    <input type="submit" value="Edit">
                </form>
            </td>
            <td>
                <form action="/removeCar/{{car.regNr}}/{{car.make}}" method="POST" onsubmit="return confirm('Are you sure you want to remove {{car.make}} with regNr: {{car.regNr}}?')">
                    <input type="submit" value="Remove">
                </form>
            </td>
        {% else %}
            <td>
                <form action="/editCar/{{car.regNr}}/{{car.make}}/{{car.color}}/{{car.year}}/{{car.price}}" method="POST">
                    <input type="submit" value="Edit" disabled style="color: white;">
                </form>
            </td>
            <td>
                <form action="/removeCar/{{car.regNr}}/{{car.make}}" method="POST" onsubmit="return confirm('Are you sure you want to remove {{car.make}} with regNr: {{car.regNr}}?')">
                    <input type="submit" value="Remove" disabled style="color: white;">
                </form>
            </td>
        {% endif %}
    </tr>
    {% endfor %}
    <tr>
        <td colspan="9">
            <form action="/addCar" method="POST">
                <input type="submit" value="Add Car" style="width: 100%;">
            </form>
        </td>
    </tr>
    <tr>
        <td colspan="9">
            <form action="/" method="POST">
                <input type="submit" value="Main Menu" style="width: 100%;">
            </form>
        </td>
    </tr>
</table>
{% endblock %}